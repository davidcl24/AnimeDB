<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/animesFragment">

    <fragment
        android:id="@+id/animesFragment"
        android:name="com.example.appejemplo.views.AnimesFragment"
        android:label="fragment_animes"
        tools:layout="@layout/fragment_animes" >
        <action
            android:id="@+id/action_animesFragment_to_animeDetailFragment"
            app:destination="@id/animeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/animeDetailFragment"
        android:name="com.example.appejemplo.views.AnimeDetailFragment"
        android:label="fragment_anime_detail"
        tools:layout="@layout/fragment_anime_detail" >
        <argument
            android:name="mal_id"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/favFragment"
        android:name="com.example.appejemplo.views.FavFragment"
        android:label="fragment_fav"
        tools:layout="@layout/fragment_fav" >
        <action
            android:id="@+id/action_favFragment_to_animeDetailFragment"
            app:destination="@id/animeDetailFragment" />
    </fragment>
</navigation>